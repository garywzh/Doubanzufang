<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="AppTheme.WhiteSearchView" parent="AppTheme">
        <item name="searchViewStyle">@style/WhiteSearchView</item>
    </style>

    <style name="AppTheme.BackgroundColorSearchView" parent="AppTheme">
        <item name="searchViewStyle">@style/BackgroundColorSearchView</item>
    </style>

    <style name="BaseSearchViewStyle" parent="Widget.AppCompat.SearchView"/>

    <style name="WhiteSearchView" parent="BaseSearchViewStyle">
        <item name="queryBackground">@android:color/white</item>
    </style>

    <style name="BackgroundColorSearchView" parent="BaseSearchViewStyle">
        <item name="queryBackground">?android:colorBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeadLine" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/hint_text</item>
    </style>

</resources>
